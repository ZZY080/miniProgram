/* pages/index/pay/index.wxss */
page{
    height: 100%;       
}
.pay{
    width: 100%;
    height: 100%;
    background-color: #27B864;
}
.pay .pay-box{
    width: 90%;
    height: 75%;
    background-color: #fff;
    margin: 50rpx auto;
    border-radius: 15rpx;
}
.pay .pay-box-top{
    display: flex;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color:#DCDCDC;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    color: #27B864;
}
.pay .pay-box-top image{
    width: 50rpx;
    height: 50rpx;
    margin: 25rpx;
}
.pay-box-top-text{
    font-size: 45rpx;
}
.pay .pay-box-top .dot{
    flex:1;
    text-align: right;
    font-size: 45rpx;
    margin-right: 30rpx;
}
.pay-box .qrcode{
    display: flex;
    justify-content: center;
    height: 80%;
    align-items: center;
}
.pay-box .qrcode image{
    width: 500rpx;
    height: 500rpx;
}